<Window x:Class="SportsStoreLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsStoreLogin"
        mc:Ignorable="d"
        Title="Авторизация - Спортивный магазин" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1E3C72" Offset="0"/>
            <GradientStop Color="#FF2A5298" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Border Background="White" 
                CornerRadius="10" 
                Margin="30"
                VerticalAlignment="Center">

            <StackPanel Margin="20">
                <!-- Заголовок -->
                <TextBlock Text="ВХОД В СИСТЕМУ" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#1E3C72"/>

                <!-- Логотип спортивного магазина -->
                <StackPanel HorizontalAlignment="Center">
                    <Ellipse Width="80" Height="80" Stroke="#1E3C72" StrokeThickness="2">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF4CAF50" Offset="0"/>
                                <GradientStop Color="#FF2E7D32" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="🏃 SPORTS" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               Foreground="#1E3C72"/>
                </StackPanel>

                <!-- Поле для логина -->
                <StackPanel>
                    <TextBlock Text="Логин (email):" 
                               FontWeight="SemiBold"
                               Foreground="#333"/>
                    <TextBox x:Name="txtUsername" 
                             Height="35" 
                             FontSize="14"
                             Padding="10,0"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Background="#FAFAFA"/>
                </StackPanel>

                <!-- Поле для пароля -->
                <StackPanel>
                    <TextBlock Text="Пароль:" 
                               FontWeight="SemiBold"
                               Foreground="#333"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Height="35" 
                                 FontSize="14"
                                 Padding="10,0"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 Background="#FAFAFA"/>
                </StackPanel>

                <!-- Чекбокс "Запомнить меня" -->
                <CheckBox x:Name="chkRemember" 
                          Content="Запомнить меня"
                          FontSize="13"/>

                <!-- Кнопка входа -->
                <Button x:Name="btnLogin" 
                        Content="ВОЙТИ" 
                        Height="40" 
                        FontSize="16" 
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnLogin_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Ссылка на регистрацию -->
                <TextBlock HorizontalAlignment="Center" 
                           FontSize="13">
                    <Run Text="Нет аккаунта?"/>
                    <Hyperlink Click="Hyperlink_Click">
                        Зарегистрироваться
                    </Hyperlink>
                </TextBlock>

                <!-- Блок для отображения ошибок -->
                <Border x:Name="errorBorder" 
                        Background="#FFEBEE" 
                        CornerRadius="5" 
                        Padding="10"
                        Visibility="Collapsed"
                        BorderBrush="#FFCDD2"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock x:Name="txtError" 
                                   Text="" 
                                   Foreground="#D32F2F"
                                   TextWrapping="Wrap"
                                   FontSize="13"/>
                    </StackPanel>
                </Border>

                <!-- Индикатор загрузки -->
                <Border x:Name="loadingBorder" 
                        Background="#E3F2FD" 
                        CornerRadius="5" 
                        Padding="10"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Ellipse Width="16" Height="16">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="#2196F3"/>
                            </Ellipse.Fill>
                            <Ellipse.RenderTransform>
                                <RotateTransform CenterX="8" CenterY="8"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                                From="0" To="360" Duration="0:0:1"
                                                RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <TextBlock Text="Выполняется вход..." 
                                   Margin="10,0,0,0"
                                   Foreground="#1976D2"
                                   FontSize="13"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
